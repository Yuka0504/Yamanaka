
<div class="search-form">
  <%= form_tag({controller:"posts",action:"index"}, method: :get) do %>
    <div class="search-box">
      <%= text_field_tag :search %>
    </div>
    <%= submit_tag '検索', class: 'button-link'  %>
  <% end %>
</div>

  <h1 class="section-title">投稿一覧</h1>

  <div class="todo-wrapper">
    <% @posts.each do |post| %>

      <div class="todo">
        <div class="todo-header">
          <div class="todo-header-left">
              <img class="todo-header-list" src="https://illustration-free.net/thumb/svg/ifn0438.svg" height="50">
              <div class="todo-header-list"><%= post.user.name %></div>
              <div class="todo-header-list"><%= post.user.university %></div>
          </div>
          <div class="todo-header-right">
              <%= post.created_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
        <!--databaseから情報取得-->
         <div class="todo-content">
           <li class="todo-list">●ToDoリスト</li>
           <li class="todo-list-detail"><%= post.body %></li>
           <li class="todo-list">●勉強時間</li>
           <li class="todo-list-detail"><%= post.time %></li>
           <li class="todo-list">●達成度</li>
           <li class="todo-list-detail"><%= post.complete %>%</li>
         </div>

         <div class="button">
           <%= link_to "詳細を見る", post_path(post.id) %>
         </div>

      </div>
    <% end %>
  </div>